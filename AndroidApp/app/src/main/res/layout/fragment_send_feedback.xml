<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
            android:text="SUBMIT"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:id="@+id/submitFeedbackBtn"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorAccept"
            android:fontFamily="@font/open_sans_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.531" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"
            android:textColor="@color/zxing_status_text"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="Comment" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="168dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.527"/>
    <CheckBox
            android:text="Consumer pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_type_id_1" android:layout_marginTop="112dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:onClick="onCheckboxClicked"/>
    <CheckBox
            android:text="Secondary/Multi pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_type_id_2" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_type_id_1"
            app:layout_constraintStart_toStartOf="@+id/checkBox_type_id_1"
            android:onClick="onCheckboxClicked"/>
    <CheckBox
            android:text="Unit load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_type_id_3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_type_id_2"
            app:layout_constraintStart_toStartOf="@+id/checkBox_type_id_2"
            android:onClick="onCheckboxClicked"/>
    <CheckBox
            android:text="Efficiency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_type_id_4"
            app:layout_constraintTop_toTopOf="@+id/checkBox_type_id_1"
            app:layout_constraintStart_toStartOf="@+id/checkBox_type_id_5"
            android:onClick="onCheckboxClicked"/>
    <CheckBox
            android:text="Ergonomic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_type_id_5"
            app:layout_constraintTop_toTopOf="@+id/checkBox_type_id_2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:onClick="onCheckboxClicked"/>
    <CheckBox
            android:text="Inspiring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_type_id_6"
            app:layout_constraintTop_toTopOf="@+id/checkBox_type_id_3"
            app:layout_constraintStart_toStartOf="@+id/checkBox_type_id_5" android:layout_marginTop="4dp"
            android:onClick="onCheckboxClicked"/>
</android.support.constraint.ConstraintLayout>