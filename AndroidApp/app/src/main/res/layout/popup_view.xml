<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="364dp"
            android:layout_height="197dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:clickable="true" android:focusable="auto"
            android:focusableInTouchMode="true" android:id="@+id/read_update_btn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:theme="@style/Base.AlertDialog.AppCompat.Light">

        <TextView
                android:text="UPDATE!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView19" android:textSize="18sp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="Due to feedback we've received on GLAD, DWP 89, we have decided to update the solution. You can expect the new version in the stores in a few months. Thank you to all who have helped by sending feedback and answering on investigations."
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView20" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView19"
                app:layout_constraintStart_toStartOf="@+id/textView19" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="2019/05/20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                app:layout_constraintTop_toTopOf="@+id/textView19" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="/Kjelle Wilmersson, IoS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/textView20"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView20"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>