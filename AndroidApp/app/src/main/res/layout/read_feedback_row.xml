<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/read_feedback_comment"
            android:fontFamily="@font/open_sans_semibold" android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/feedback_types"
            app:layout_constraintStart_toStartOf="@+id/feedback_types" android:textStyle="italic"
            android:textColor="@android:color/darker_gray"/>
    <TextView
            android:text="First name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feedback_first_name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:fontFamily="@font/open_sans_semibold" android:textSize="18sp"/>
    <TextView
            android:text="Last name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feedback_last_name"
            app:layout_constraintTop_toTopOf="@+id/feedback_first_name"
            app:layout_constraintStart_toEndOf="@+id/feedback_first_name" android:layout_marginStart="12dp"
            android:fontFamily="@font/open_sans_semibold" android:textSize="18sp"/>
    <TextView
            android:text="Types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feedback_types"
            android:fontFamily="@font/open_sans_semibold" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/feedback_first_name"
            app:layout_constraintStart_toStartOf="@+id/feedback_first_name" android:textStyle="italic"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/read_feedback_comment"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>