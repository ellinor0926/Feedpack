<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="257dp"
            android:layout_height="41dp"
            android:text="Choose Product"
            android:id="@+id/productHeader"
            android:fontFamily="@font/open_sans_semibold" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/itemNumberInput" android:hint="Item number" android:layout_marginTop="152dp"
            app:layout_constraintTop_toBottomOf="@+id/productHeader" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="number" tools:maxLength="6"
            android:maxLength="6"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/supplierNumberInput" android:hint="Supplier number" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/itemNumberInput" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:inputType="number" tools:maxLength="5"
            android:maxLength="5"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/dwpNumberInput" android:hint="DWP number" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/supplierNumberInput" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:inputType="number"/>
    <Button
            android:text="SEARCH"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:id="@+id/getProductBtn"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorAccept"
            android:fontFamily="@font/open_sans_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.531" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"
            android:textColor="@color/zxing_status_text"/>
    <Button
            android:text="SCAN"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:id="@+id/startScanBtn"
            style="@style/Widget.AppCompat.Button"
            android:fontFamily="@font/open_sans_semibold" android:textColor="@color/zxing_status_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/itemNumberInput" app:layout_constraintVertical_bias="0.813"/>

</android.support.constraint.ConstraintLayout>